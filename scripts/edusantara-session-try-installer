#!/bin/bash

if [ -z "$TRY_B_I" ];then
    exit
fi

grep "boot=live" /proc/cmdline
if [ $? -eq 0 -a -x /usr/bin/edusantara-installer ];then

    rm -f /run/locale

    # Add option user to identify owner
	sudo -E nice -n -20 su -c edusantara-installer

# Run post-install script when created by edusantara-installer
    if [ -f /tmp/post-install.sh ];then
        . /tmp/post-install.sh
    fi 

    # Source locale environment variable generated by installer
    if [ -f /run/locale ];then
        . /run/locale
    fi

    # Source timezone environment variable generated by installer
    if [ -f /run/timezone];then
        . /run/timezone
    fi

fi

